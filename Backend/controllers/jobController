const Job = require("../models/Job");

// @desc Create a new job
// @route POST /api/jobs
exports.createJob = async (req, res) => {
  try {
    const { title, company, description, location, salary } = req.body;

    // req.user comes from your 'protect' middleware
    if (!req.user || !req.user.id) {
      return res.status(401).json({ message: "Not authorized, no user id" });
    }

    const newJob = new Job({
      title,
      company: company || "General Company", // Fallback to avoid validation crash
      description,
      location: location || "Remote",
      salary: salary || "N/A",
      postedBy: req.user.id // Linked to the ID from the JWT
    });

    const savedJob = await newJob.save();
    res.status(201).json(savedJob);
  } catch (error) {
    console.error("Mongoose Save Error:", error.message);
    res.status(400).json({ message: "Database Error: " + error.message });
  }
};

// @desc Get all jobs
exports.getJobs = async (req, res) => {
  try {
    const jobs = await Job.find().sort({ createdAt: -1 });
    res.status(200).json(jobs);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};